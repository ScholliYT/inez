@page "/edititem"
@page "/edititem/{Id}"
@inherits INEZ.Pages.EditItemModel

<h3>@PageTitle</h3>

@if (Item == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-9">
            <form class="form form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label">Name:</label>
                    <div class="col-md-7">
                        <input type="text" @bind-value=@Item.Name class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Beschreibung:</label>
                    <div class="col-md-7">
                        <input type="text" @bind-value=@Item.Description class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-7">
                        <button class="btn btn-primary" type="button" @onclick=Save>Speichern</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
